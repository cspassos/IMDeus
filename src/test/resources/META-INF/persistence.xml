<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	  
	<persistence-unit name="ImDeusPU">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		
		<class>com.imdeus.model.ComplementoPessoa</class>
		<class>com.imdeus.model.Endereco</class>
		<class>com.imdeus.model.Grupo</class>
		<class>com.imdeus.model.GrupoPessoa</class>
		<class>com.imdeus.model.Pessoa</class>
		<class>com.imdeus.model.StatusGrupo</class>
		
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:imdeustest"/>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            
			<property name="hibernate.hbm2ddl.auto" value="create"/>
			<property name="hibernate.format_sql" value="true" />
            
            <property name="javax.persistence.sql-load-script-source" value="META-INF/inserts/inserts.sql" />
		</properties>
	</persistence-unit>
	
</persistence>